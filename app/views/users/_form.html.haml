= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f|

  = f.input :email
  = f.input :password
  = f.input :password_confirmation

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), posts_path, :class => 'btn'
