= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f|
  / .control-group
  /   = f.label :_type, :class => 'control-label'
  /   .controls
  /     = f.text_field :_type, :class => 'text_field'
  / .control-group
  /   = f.label :_id, :class => 'control-label'
  /   .controls
  /     = f.text_field :_id, :class => 'text_field'

  = f.input :title
  = f.input :content, :as => :text, :input_html => { :rows => 10 }
  = f.input :author

  / .control-group
  /   = f.label :title, :class => 'control-label'
  /   .controls
  /     = f.text_field :title, :class => 'text_field'
  / .control-group
  /   = f.label :content, :class => 'control-label'
  /   .controls
  /     = f.text_field :content, :class => 'text_field'
  / .control-group
  /   = f.label :author, :class => 'control-label'
  /   .controls
  /     = f.text_field :author, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), posts_path, :class => 'btn'
